/*Count function returns the count of an expression*/
SELECT COUNT (*) FROM sales;

SELECT COUNT (order_line ) as "Number of Products Ordered", COUNT (DISTINCT
order_id ) AS "Number of Orders" FROM sales WHERE customer_id = 'CG-12520';

/* Sum function returns the summed value of an expression */
SELECT sum(Profit) AS "Total Profit" FROM sales;

SELECT sum(quantity) AS "Total Quantity" FROM sales where 
product_id = 'FUR-TA-10000577';

